<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="UserActivityItemBinding">

    </data>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp">

        <ImageView
                android:id="@+id/user_activity_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                tools:src="@drawable/ic_play"
                tools:ignore="ContentDescription,RtlHardcoded"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <com.actinarium.aligned.TextView
                    android:id="@+id/user_activity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp"
                    app:firstLineLeading="32dp"
                    app:leading="20dp"
                    app:lastLineDescent="4dp"
                    tools:text="Activity title"/>

            <com.actinarium.aligned.TextView
                    android:id="@+id/user_activity_subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="14sp"
                    app:firstLineLeading="16dp"
                    app:leading="20dp"
                    app:lastLineDescent="4dp"
                    tools:text="Nag each 5 minutes"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/user_activity_actions_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/ic_more"
                tools:ignore="ContentDescription,RtlHardcoded"/>

    </LinearLayout>

</layout>